<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/areaSet"
            android:layout_toLeftOf="@+id/areaComp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="지역 선택"/>

        <Button
            android:id="@+id/areaComp"
            android:layout_toLeftOf="@+id/setting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="지역 비교"/>

        <Button
            android:id="@+id/setting"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="설정" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/Location"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:textSize="17pt"
                    android:text="" />
            </LinearLayout>

            <View
                android:id="@+id/mainDivide1"
                android:layout_margin="10dp"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorPrimary" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/WeatherImage"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_width="200dp"
                    android:layout_height="150dp"
                    app:srcCompat="@android:color/transparent" />
                <TextView
                    android:id="@+id/TempCur"
                    android:layout_toRightOf="@id/WeatherImage"
                    android:layout_alignParentTop="true"
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:text=""
                    android:textAlignment="center"
                    android:textSize="18pt" />
                <TextView
                    android:id="@+id/TempRange"
                    android:layout_alignParentTop="true"
                    android:layout_toRightOf="@id/TempCur"
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:text=""
                    android:textAlignment="center"
                    android:textSize="9pt"/>

                <TextView
                    android:id="@+id/TempMM"
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="2dp"
                    android:layout_toRightOf="@id/WeatherImage"
                    android:layout_below="@+id/TempCur"
                    android:text=""
                    android:textAlignment="center"
                    android:textSize="9pt" />
                <TextView
                    android:id="@+id/TempSen"
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="2dp"
                    android:layout_below="@+id/TempCur"
                    android:layout_toRightOf="@+id/TempMM"
                    android:text=""
                    android:textAlignment="center"
                    android:textSize="8pt" />
                <LinearLayout
                    android:id="@+id/layoutLinear1"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:layout_toRightOf="@id/WeatherImage"
                    android:layout_below="@+id/TempSen">
                    <TextView
                        android:id="@+id/Wind"
                        android:layout_width="60dp"
                        android:layout_height="50dp"
                        android:textSize="7pt"
                        android:textAlignment="center"
                        android:text="" />
                    <TextView
                        android:id="@+id/Per"
                        android:layout_width="60dp"
                        android:layout_height="50dp"
                        android:textSize="7pt"
                        android:textAlignment="center"
                        android:text="" />
                    <TextView
                        android:id="@+id/Reh"
                        android:layout_width="60dp"
                        android:layout_height="50dp"
                        android:textSize="7pt"
                        android:textAlignment="center"
                        android:text=""/>
                </LinearLayout>

                <TextView
                    android:id="@+id/AirPM10"
                    android:layout_below="@+id/layoutLinear1"
                    android:layout_toRightOf="@+id/WeatherImage"
                    android:layout_marginTop="2dp"
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:textSize="7pt"
                    android:textAlignment="center"
                    android:text=""
                    />
                <TextView
                    android:id="@+id/AirPM25"
                    android:layout_below="@+id/layoutLinear1"
                    android:layout_toRightOf="@+id/AirPM10"
                    android:layout_marginTop="2dp"
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:textSize="7pt"
                    android:textAlignment="center"
                    android:text=""
                    />
            </RelativeLayout>

            <View
                android:id="@+id/mainDivide5"
                android:layout_margin="10dp"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorPrimary" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="247dp">

                <ProgressBar
                    android:id="@+id/progressBar"
                    style="?android:attr/progressBarStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true" />

                <WebView
                    android:id="@+id/category_web_view"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            </RelativeLayout>

            <View
                android:id="@+id/mainDivide6"
                android:layout_margin="10dp"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorPrimary" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="음식추천"
                    android:textSize="30pt"
                    android:textAlignment="center"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <Button
                    android:id="@+id/Refresh"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="새로고침" />
            </RelativeLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>